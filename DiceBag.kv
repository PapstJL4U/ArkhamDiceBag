#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window
#:import Factory kivy.factory.Factory

FloatLayout:
    fullscreen: True
    name: 'DiceBag'

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None

        Button:
            id: btDraw
            text: 'Draw'

        Button:
            id: btContent
            text: 'Show Bag'

        Button:
            id: btChange
            text: 'Change Bag'

<CustomDropDown>:
    id: cdd
    Button:
        text: 'Clear bag'
        size_hint_y: None
        on_release: root.select('Clear')

    Button:
        id: sliderbt
        text: 'Add +/- Coin'
        size_hint_y: None
        on_release: root.select(slider.value)

    Slider:
        id: slider
        size_hint_y: None
        orientation: 'horizontal'
        min: -8
        max: +1
        step: 1
        on_touch_move: sliderbt.text = 'Add {} Coin'.format(str(self.value))
        on_touch_down: sliderbt.text = 'Add {} Coin'.format(str(self.value))
        on_touch_up: sliderbt.text = 'Add {} Coin'.format(str(self.value))

    Button:
        text: 'Add Elder Sign'
        size_hint_y: None
        on_release: root.select('elder')

    Button:
        text: 'Add Skull Coin'
        size_hint_y: None
        on_release: root.select('skull')

    Button:
        text: 'Add Gravestone Coin'
        size_hint_y: None
        on_release: root.select('gravestone')

    Button:
        text: 'Add Akolyth Coin'
        size_hint_y: None
        on_release: root.select('akolyth')

    Button:
        text: 'Add Elder Monster'
        size_hint_y: None
        on_release: root.select('monster')

    Button:
        text: 'Add Tentacle Coin'
        size_hint_y: None
        on_release: root.select('tentacle')

    Button:
        id: btPopup
        text: 'New Bag'
        size_hint_y: None

<NewBag>:
    id: newbag
    name: 'diffpop'
    auto_dismiss: True
    title: "Choose a new Difficulty for the bag."
    size_hint: (None, None)
    size: (400, 400)
    BoxLayout:
        orientation: "vertical"
        ToggleButton:
            id: bteasy
            text: 'Easy'
            group: 'g1'
            on_release: newbag.dismiss()
            on_release: app.makeNewBag('easy')
        ToggleButton:
            id: btnormal
            text: 'Normal'
            group: 'g1'
            on_release: newbag.dismiss()
            on_release: app.makeNewBag('normal')
        ToggleButton:
            id: bthard
            text: 'Hard'
            group: 'g1'
            on_release: newbag.dismiss()
            on_release: app.makeNewBag('hard')
        ToggleButton:
            id: btexpert
            text: 'Expert'
            group: 'g1'
            on_release: newbag.dismiss()
            on_release: app.makeNewBag('expert')


<Picture>:
    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None

    Image:
        id: image
        source: root.source

        # create initial image to be 400 pixels width
        size: 400, 400 / self.image_ratio

        # add shadow background
        canvas.before:
            Color:
                rgba: 1,1,1,1
            BorderImage:
                source: 'shadow32.png'
                border: (36,36,36,36)
                size:(self.width+72, self.height+72)
                pos: (-36,-36)



